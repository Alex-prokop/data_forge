{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "languages": [
    {
      "language": "nodejs",
      "path": "backend",
      "install": "npm install",
      "build": "npm run build",
      "start": "npm run start"
    },
    {
      "language": "nodejs",
      "path": "frontend",
      "install": "npm install -g serve && npm install",
      "build": "npm run build",
      "start": "vite preview --host --port 80"
    }
  ]
}
